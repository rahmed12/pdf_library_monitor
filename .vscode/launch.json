{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Library PDF Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "bookshelf_app.cli",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "--input-dir",
                "/workspaces/audiobook-ai-docker-image/myProjects/booklib/inputbooks",
                "--pdf-output-dir",
                "/workspaces/audiobook-ai-docker-image/myProjects/booklib/pdfs",
                "--ebook-output-dir",
                "/workspaces/audiobook-ai-docker-image/myProjects/booklib/ebooks",
                "--default-model",
                "gpt-oss:20b",
                "--metadata-model",
                "gpt-oss:20b",
                "--classification-model",
                "gpt-oss:20b",
                "--max-pages",
                "10",
                "--once"
            ]
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
}